      Favorites
    </a>

    <!-- Upload -->
    <a id="icon-upload-desktop" class="margin-footer transparent btn-large waves-effect waves-light hoverable z-depth-0" href="/upload">
      <i class="fas fa-plus-circle"></i>
      Upload
    </a>

    <% if current_user %>
    <% unless current_user.find_unread_messages.empty? %>
    <a id="icon-message" class="margin-footer transparent btn-large waves-effect waves-light hoverable z-depth-0" href="<%= chat_rooms_path %>">
      <i class="fas fa-envelope red-text"> </i> Messages
    </a>
    <% else %>
    <a id="icon-message" class="margin-footer transparent btn-large waves-effect waves-light hoverable z-depth-0" href="<%= chat_rooms_path %>">
      <i class="fas fa-envelope"> </i> Messages
    </a>
    <% end %>
    <% else %>
    <a id="icon-message" class="margin-footer transparent btn-large waves-effect waves-light hoverable z-depth-0" href="<%= chat_rooms_path %>">
      <i class="fas fa-envelope"></i> Messages
    </a>
    <% end %>
    <!-- Profile -->
    <a id="icon-profile-desktop" class="margin-footer transparent btn-large waves-effect waves-light hoverable z-depth-0" href=" <%= new_user_session_path %> ">
      <i class="fas fa-user"></i>
      Profile
    </a>
  </div>
</div>
