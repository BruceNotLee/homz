<link href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" rel="stylesheet">
<!-- Tablet and smaller -->
<div class="row-footer row hide-on-large-only">
  <div class="center">
    <!-- Home -->

    <%= link_to feed_path, class: "margin-footer transparent btn-floating waves-effect waves-light hoverable z-depth-0", id: "icon-home" do %>
      <i class="fas fa-home"></i>
    <% end %>

    <!-- Favorites -->
    <span id="icon-favorites">
      <%= render partial: 'footer_icons', locals: { path: my_favorites_path, icon: "fas fa-heart" } %>
    </span>


    <!-- Upload -->
    <span id="icon-upload">
      <%= render partial: 'footer_icons', locals: { path: upload_path, icon: "fas fa-plus-circle" } %>
    </span>

    <!-- Message -->
    <% if current_user %>
    <% unless current_user.find_unread_messages.empty? %>
    <span id="icon-message" class="red-text">
      <%= render partial: 'footer_icons', locals: { path: chat_rooms_path, icon: "fas fa-envelope" } %>
    </span>
    <% else %>
    <span id="icon-message">
      <%= render partial: 'footer_icons', locals: { path: chat_rooms_path, icon: "fas fa-envelope" } %>
    </span>
    <% end %>
    <% else %>
    <span id="icon-message">
      <%= render partial: 'footer_icons', locals: { path: chat_rooms_path, icon: "fas fa-envelope" } %>
    </span>
    <% end %>

    <!-- Profile -->
    <span id="icon-profile">
      <%= render partial: 'footer_icons', locals: { path: profile_path, icon: "fas fa-user" } %>
    </span>
    </div>
  </div>
</div>

<!-- Desktop -->
