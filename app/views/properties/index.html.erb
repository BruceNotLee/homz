<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Bed</th>
      <th>Bath</th>
      <th>Zip</th>
      <th>Neighborhood</th>
      <th>Price</th>
      <th>Sqft</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.user %></td>
        <td><%= property.bed %></td>
        <td><%= property.bath %></td>
        <td><%= property.zip %></td>
        <td><%= property.neighborhood %></td>
        <td><%= property.price %></td>
        <td><%= property.sqft %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

