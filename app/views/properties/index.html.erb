<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s12 center-align">
    <h3>My  Properties</h3>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <%= link_to 'New Property', new_property_path %>
  </div>
</div>

<table class="responsive-table striped">
  <thead>
    <tr>
      <th>Bed/Bath</th>
      <th>Zip</th>
      <th>Neighborhood</th>
      <th>Price</th>
      <th>Sqft</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td class="center-align"><%= property.bed %>/<%= property.bath %></td>
        <td><%= property.zip %></td>
        <td><%= property.neighborhood %></td>
        <td><%= property.price %></td>
        <td><%= property.sqft %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
