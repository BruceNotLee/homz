<p id="notice"><%= notice %></p>
<div class="col S12 container">

  <div class="row">
      <h5 class="center-align">
        My  Properties
      </h5>
  </div>

  <div class="row">
    <div class="col s12">
      <%= link_to 'New Property', new_property_path %>
    </div>
  </div>

  <table class="responsive-table striped">
    <thead>
      <tr>
        <th>Property</th>
        <th>Bed/Bath</th>
        <th>Zip</th>
        <th>Neighborhood</th>
        <th>Price</th>
        <th>Sqft</th>
        <th>Options</th>
      </tr>
    </thead>

    <tbody>
      <% @properties.each do |property| %>
        <tr>
          <td><%= link_to 'View', property_path(property) %></td>
          <td><%= property.bed %>/<%= property.bath %></td>
          <td><%= property.zip %></td>
          <td><%= property.neighborhood %></td>
          <td><%= property.price %></td>
          <td><%= property.sqft %></td>
          <td>  <%= link_to 'Edit', edit_property_path(property) %> / <%= link_to 'Delete', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
