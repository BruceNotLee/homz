<div class="picture-block">
  <%= render @picture %>
</div>
<div class="comment-block">
  <% @picture.comments.each do |c| %>
  <div class="comment">
    <p>
      <div class="name">
        <%= c.user.name %>
      </div>
      <div class="comment-body">
        <%= c.body %>
      </div>
    </p>
  </div>
  <div class="time">
    at <%= c.created_at.strftime('%x') %>
  </div>

  <% end %>
  <%= render partial: 'comments/form', locals: { comment: @comment } %>
</div>
<!-- Modal Trigger -->
