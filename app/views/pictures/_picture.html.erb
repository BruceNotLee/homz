<div class="col s12 m6 l4 xl3">
  <div class="card hoverable">
    <div class="card-image">
      <% if current_user %>
      <%= link_to(image_tag("mail.png"), join_chat_path(title: "#{current_user.id}-#{picture.id}-chat", pic_owner_id: picture.user_id) , class:"transparent btn-floating halfway-fab z-depth-5 left heart")%>
      <% else %>
      <%= link_to(image_tag("mail.png"), new_user_session_path, class:"transparent btn-floating halfway-fab z-depth-5 left heart") %>
      <% end %>      
      <%= link_to image_tag(picture.attachment.url(:medium), class: 'feed-responsive-img'), make_picture_path(picture) %>
      <%= div_for picture do %>
      <%= render partial: "favorites/button2", locals: { picture: picture } %>
      <% end %>
    </div>
    <div class="card-content">
      <%= render partial: "pictures/tag_chips", locals: {picture: picture} %><br>
      <%= render partial: 'pictures/pic_owner', locals: {picture: picture} %>
      <p><%=picture.caption%></p>
    </div>
  </div>
</div>
