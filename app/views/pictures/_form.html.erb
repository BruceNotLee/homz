
<% if current_user %>
<%= form_with(model: picture, local: true) do |form| %>
<% if picture.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

  <ul>
    <% picture.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row">
  <div class="field col s12">
    <%= form.label "What is the Zip Code this home is located in?" %>
    <%= form.text_field :location, id: :picture_location, value: current_user.location %>
  </div>
</div>

<div class="field">
  <%= form.hidden_field :user_id, value:current_user.id %>
</div>

<div class="row">
  <div class="field col s12">
    <%= form.label :attachment %>
    <%= form.file_field :attachment %>
  </div>
</div>

<div class="row">
  <div class="col s12 actions field">
    <%= form.submit class: "btn blue darken-4" %>
  </div>
</div>

<% end %>
<% else %>
<% redirect_to new_user_session_path %>
<% end %>
